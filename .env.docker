# ===========================================
# EJPEACE MARKETPLACE BACKEND - DOCKER ENVIRONMENT
# ===========================================
# This file is used by Docker Compose. Copy to .env for local development.

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# DATABASE (MySQL)
# ===========================================
# For Docker: use 'mysql' as host (service name)
DB_HOST=mysql
DB_PORT=3306
DB_USER=peacetifal
DB_PASSWORD=peacetifal_password
DB_NAME=peacetifal_db

# ===========================================
# AUTHENTICATION (JWT)
# ===========================================
JWT_SECRET=ejpeace_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# ===========================================
# CORS CONFIGURATION
# ===========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:4173,http://frontend:5173

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ejpeaceentertainment.com

# ===========================================
# PAYMENT (XENDIT)
# ===========================================
XENDIT_SECRET_KEY=
XENDIT_WEBHOOK_SECRET=
XENDIT_CALLBACK_TOKEN=

# ===========================================
# SMS/WHATSAPP (TWILIO) - Optional
# ===========================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WHATSAPP_NUMBER=
